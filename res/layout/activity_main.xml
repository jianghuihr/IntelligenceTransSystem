<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:intelligencetranssystem="http://schemas.android.com/apk/res/com.just.jh.intelligencetranssystem"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.just.jh.intelligencetranssystem.util.SlidingMenu
        android:id="@+id/slidemenu_trans"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        intelligencetranssystem:rightPadding="60dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <include layout="@layout/layout_left_menu" />

            <include layout="@layout/layout_right_content" />
        </LinearLayout>

    </com.just.jh.intelligencetranssystem.util.SlidingMenu>

</RelativeLayout>